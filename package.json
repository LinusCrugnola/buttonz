{
  "name": "buttonz",
  "displayName": "buttonz",
  "description": "custom run and build buttons",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinusCrugnola/buttonz.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "buttonz.launch",
        "title": "Run",
        "icon": "$(run)"
      },
      {
        "command": "buttonz.build",
        "title": "Build",
        "icon": "$(tools)"
      },
      {
        "command": "buttonz.clean",
        "title": "Clean",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "buttonz.launch",
          "group": "navigation"
        },
        {
          "command": "buttonz.build",
          "group": "navigation"
        },
        {
          "command": "buttonz.clean",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "buttonz.launch": {
            "type": "string",
            "default": "echo 'Command 1'"
        },
        "buttonz.build": {
            "type": "string",
            "default": "echo 'Command 2'"
        },
        "buttonz.clean": {
            "type": "string",
            "default": "echo 'Command 3'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
